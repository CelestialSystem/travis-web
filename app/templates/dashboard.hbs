<Layouts::Center>
  <UiKit::Box @margin={{hash bottom=6}}>
    <UiKit::Box @tag='section' data-test-dashboard-starred-repositories="true">
      <UiKit::Text @color='blue-light' @margin={{hash bottom=2}} @size='xl'>
        Starred repositories
      </UiKit::Text>
      <UiKit::Box>
        {{#each this.starredRepos as |repo|}}
          <DashboardRow @repo={{repo}} @star={{this.star}} @unstar={{this.unstar}} />
        {{else}}
          <UiKit::Box
            @borderColor='grey-light'
            @borderWidth={{hash all='xs'}}
            @padding={{hash all=8}}
          >
            <UiKit::Text @color='grey'>
              <SvgImage @name='icon-star' @class='w-6 inline-block' />
              You can keep track of your favorite repositories here once you start starring!
            </UiKit::Text>
          </UiKit::Box>
        {{/each}}
      </UiKit::Box>
    </UiKit::Box>
  </UiKit::Box>
  <UiKit::Box @margin={{hash bottom=2}}>
    <UiKit::Link
      @route='dashboard.repositories'
      @variant='tab-blue'
      @activeVariant='tab-blue-active'
      data-test-active-repos-tab="true"
    >
      Active Repositories
    </UiKit::Link>
    <UiKit::Link
      @route='dashboard.builds'
      @variant='tab-blue'
      @activeVariant='tab-blue-active'
      data-test-active-repos-tab="true"
    >
      My builds
    </UiKit::Link>
  </UiKit::Box>
  {{outlet}}
</Layouts::Center>
