<li class="cache-item {{@cache.type}}">
  <div class="row-item row-branch">
    <RequestIcon @event={{@cache.type}} />
    <span class="label-align">
      {{@cache.branch}}
    </span>
  </div>
  <div class="row-item row-calendar">
    <SvgImage @name="icon-calendar" @class="icon" />
    <span class="label-align">
      {{format-time @cache.last_modified}}
    </span>
  </div>
  <div class="row-item row-size">
    {{svg-jar "icon-scales" class="icon"}}
    <span class="label-align">
      {{travis-mb @cache.size}}MB
    </span>
  </div>
  <div class="row-item">
    <a
      class="{{if this.delete.isRunning "deleting"}} pointer delete-cache-icon"
      title="Delete this cache"
      {{on 'click' (perform this.delete)}}
    >
      <EmberTooltip @text="Delete" />
      <SvgImage @name="icon-trash" @class="icon" />
    </a>
  </div>
</li>
