{{#if @route ~}}
  <LinkTo
    @route={{@route}}
    ...attributes
  >
    {{~ '' ~}}
    <UiKit::Text
      @tag='span'
      @variant={{this.currentVariant}}
    >
      {{~yield~}}
    </UiKit::Text>
    {{~ '' ~}}
  </LinkTo>
{{~else~}}
  <UiKit::Text
    @tag='a'
    @variant={{this.variant}}
    href={{this.href}}
    rel={{this.rel}}
    target={{this.target}}
    ...attributes
  >
    {{~yield~}}
  </UiKit::Text>
{{~/if}}
